{
  "name": "uploader",
  "version": "1.0.1",
  "description": "This is a node.js express app that uses the go-ipfs client (the js-ipfs client [doesn't support](https://github.com/ipfs/js-ipfs/pull/856) the DHT yet) to upload scenes to our IPFS node.",
  "main": "src/server.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "./node_modules/eslint/bin/eslint.js .",
    "lint:fix": "./node_modules/eslint/bin/eslint.js --fix .",
    "test": "NODE_ENV=test nyc mocha  --timeout 120000 --exit",
    "start": "nodemon src/server.js",
    "build:image": "docker build --no-cache -t dcl-ipfs-node .",
    "precommit": "lint-staged"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "prettier --write 'src/**/*.js'",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "src"
    ]
  },
  "author": "The Decentraland Team",
  "license": "Apache-2.0",
  "dependencies": {
    "aws-sdk": "^2.224.1",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bs58": "^4.0.1",
    "cors": "^2.8.4",
    "decentraland-eth": "1.1.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "http-errors": "^1.6.2",
    "mkdirp": "^0.5.1",
    "morgan": "^1.9.0",
    "multihashes": "^0.4.13",
    "newrelic": "^3.3.0",
    "redis": "^2.8.0",
    "standard": "^10.0.3",
    "tempy": "^0.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.0.0",
    "eslint": "^4.19.1",
    "mocha": "^5.0.5",
    "nodemon": "^1.14.12",
    "nyc": "^11.6.0",
    "prettier": "^1.13.4",
    "sinon": "^4.5.0"
  }
}